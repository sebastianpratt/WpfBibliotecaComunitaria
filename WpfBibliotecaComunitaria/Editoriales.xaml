        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBibliotecaComunitaria"
        mc:Ignorable="d"
        Title="Editoriales" Height="450" Width="800">
    <Grid>
        <Label Content="Editorial" HorizontalAlignment="Left" Margin="298,10,0,0" VerticalAlignment="Top" Height="50" Width="120"/>
