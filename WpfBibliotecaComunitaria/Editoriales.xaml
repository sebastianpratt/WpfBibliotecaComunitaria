        <Label Content="Ciudad" HorizontalAlignment="Left" Margin="46,263,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Height="26" Margin="379,85,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="78"/>
