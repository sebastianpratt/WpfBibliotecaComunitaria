        <Button Content="Menu" HorizontalAlignment="Left" Margin="382,329,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ListBox x:Name="lstMarca"  Grid.Row="0" Margin="494,98,43,95" SelectionChanged="lstMarca_SelectionChanged" Loaded="lstMarca_Loaded"/>

    </Grid>
</Window>
